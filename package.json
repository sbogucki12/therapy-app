{
  "name": "affirmation-companion",
  "version": "0.1.0",
  "description": "A mindful companion app for daily affirmations and self-reflection",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run start --workspace=frontend",
    "start": "npm run start --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "test": "npm run test --workspace=frontend",
    "install-all": "npm install --workspaces",
    "clean": "npm run clean --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/affirmation-companion.git"
  },
  "keywords": [
    "mindfulness",
    "affirmations",
    "journaling",
    "self-reflection",
    "mental-health"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}